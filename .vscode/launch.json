{
    // 使用 IntelliSense 以得知可用的屬性。
    // 暫留以檢視現有屬性的描述。
    // 如需詳細資訊，請瀏覽: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Django RunServer",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}\\manage.py",
            "envFile": "${workspaceFolder}\\.env",
            "args": [
                "runserver",
                "0.0.0.0:5000"
            ],
            "django": true
        },
        {
            "name": "Django Jupyter",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}\\manage.py",
            "envFile": "${workspaceFolder}\\.env",
            "args": [
                "shell_plus",
                "--notebook"
            ],
            "django": true
        },
        {
            "name": "Django Sass Watch",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}\\manage.py",
            "envFile": "${workspaceFolder}\\.env",
            "args": [
                "sass",
                "static/css/scss",
                "static/css/web",
                "--watch"
            ],
            "django": true
        }
    ]
}